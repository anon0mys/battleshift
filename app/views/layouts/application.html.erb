<!DOCTYPE html>
<html>
  <head>
    <title>BattleshipWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if flash %>
      <% flash.each do |key, value| %>
        <div>
          <%= value %>
        </div>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
